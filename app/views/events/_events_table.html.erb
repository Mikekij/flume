<table class="table table-striped">
  <thead>
    <tr>
      <th>Linac</th>
      <th>Starttime</th>
      <th>Duration (min)</th>
      <th>Recorded By</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= Linac.find(event.linac_id).name %></td>
        <td><%= event.starttime.strftime("%H:%M %m/%d/%y") %></td>
        <td><%= event.duration / 60 unless event.duration.nil? %></td>
        <% @user = User.find(event.created_by_user_id) %>
        <td><%= @user.first_name %> <%= @user.last_name %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
