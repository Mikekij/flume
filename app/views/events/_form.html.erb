    <%= f.label :endtime %><br>
    <%= f.datetime_select :endtime %>
  </div>

  <div class="field">
    <%= f.label :linac_id %><br>
    <%= f.collection_select :linac_id, Linac.all.order(:created_at),:id,:name, include_blank: false %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
