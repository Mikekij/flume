<p id="notice"><%= notice %></p>

<h1>Listing Linacs</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>User group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @linacs.each do |linac| %>
      <tr>
        <td><%= linac.name %></td>
        <td><%= UserGroup.find(linac.user_group_id).name %></td>
        <td><%= link_to 'Show', linac %></td>
        <td><%= link_to 'Edit', edit_linac_path(linac) %></td>
        <td><%= link_to 'Destroy', linac, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

